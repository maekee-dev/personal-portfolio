            </div>
            <div class="max-w-[600px] mt-4 max-lg:max-w-none">
                <h2 class="mt-2 text-xl font-robit font-semibold uppercase text-green">{title}</h2>
                <p class="text-gray/80 mt-1 mb-4">{description}</p>
                <a href={href} target="_blank" class="text-xs uppercase transition-colors hover:text-green">Visita sito -></a>
            </div>
        </div>
        <div class="w-full flex justify-between items-end max-lg:mt-8">
            <div class="flex items-center gap-2">
                {tags.map((e:string) => (
                    <span class="uppercase text-xs bg-green text-main font-medium px-2 py-1 rounded-full">{e}</span>
                ))}
            </div>
            <div class="flex flex-col items-end gap-4">
                <slot /> 
                <div class="flex items-center justify-center gap-2 relative">
                    {colors.map((e:string) => (
                        <div class="w-[25px] h-[25px] rounded-md border border-gray/40 flex items-center justify-center group" style={`background-color: #${e}`}>
                            <div class="absolute -top-[35px] text-sm uppercase bg-green text-main rounded-md px-1 font-medium opacity-0 transition-all group-hover:translate-y-1 group-hover:opacity-100">#{e}</div>
                        </div>
                    ))}
                </div>  
            </div>
        </div>
    </div>
    <div class="w-full max-w-[445px] h-[300px] bg-green/10 backdrop-blur-md rounded-2xl p-1 border border-green/20 mt-2 relative transition-all group hover:-rotate-2 max-sm:h-auto">
        <a href={href} target="_blank">
            <img src={frontImage.src} alt=`Sito sviluppato per ${title}, versione desktop` class="object-cover w-full h-full rounded-xl" />
            <div class="z-20 w-[100px] h-[200px] bg-green/10 p-1  border border-green/20 rounded-md right-2 -bottom-4 absolute transition-transform group-hover:rotate-3 max-lg:bottom-0 max-lg:-right-28 max-md:right-2 max-md:-bottom-4">
                <img src={mobileImage.src}  alt=`Sito sviluppato per ${title}, versione mobile` class="w-full h-full object-cover rounded-sm" />
            </div>
        </a>
    </div>
</div>