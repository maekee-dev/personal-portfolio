            <div class="h-full w-[3px] bg-white/80"></div>
            <div class="h-full w-[3px] bg-main/0"></div>
            <div class="h-full w-[4px] bg-white/80"></div>
            <div class="h-full w-[4px] bg-main/0"></div>
            <div class="h-full w-[5px] bg-white/80"></div>
            <div class="h-full w-[3px] bg-main/0"></div>
            <div class="h-full w-[2px] bg-white/80"></div>
            <div class="h-full w-[6px] bg-main/0"></div>
            <div class="h-full w-[2px] bg-white/80"></div>
            <div class="h-full w-[7px] bg-main/0"></div>
            <div class="h-full w-[8px] bg-white/80"></div>
            <div class="h-full w-[2px] bg-main/0"></div>
            <div class="h-full w-[2px] bg-white/80"></div>
            <div class="h-full w-[2px] bg-main/0"></div>
            <div class="h-full w-[3px] bg-white/80"></div>
            <div class="h-full w-[2px] bg-main/0"></div>
            <div class="h-full w-[4px] bg-white/80"></div>
        </div>
    </div>
    <div class="pt-4 px-4">
        <h3 class="text-lg uppercase text-green font-bold">{title}</h3>
        <p class="text-sm text-white/80 mt-1">{description}</p>
    </div>
    <div class="flex items-center gap-4 justify-between max-md:hidden mt-2 py-2 px-4">
        <div class="flex gap-1 items-center">
            {tags.map((e:string) => (
                <span class="uppercase text-xs font-medium bg-green text-green-dark backdrop-blur-md px-2 rounded-full">{e}</span>
            ))}
        </div>
        <div class="flex items-center gap-2 max-lg:hidden">
            {colors.map((e:string) => (
                <div class="w-[25px] h-[25px] rounded-md border opacity-60 border-gray/40" style={`background-color: #${e}`}></div>
            ))}
        </div>  
    </div>
    <div class="grow w-full relative flex items-center justify-center pt-2 pb-4 px-4 overflow-hidden max-lg:min-h-[400px] max-md:min-h-auto max-sm:p-1">
        <div class="w-full h-full flex items-center justify-center relative">
            <img src={backImage.src} alt="" class="z-10 absolute w-full h-full rounded-xl object-cover" />
            <div class="z-30 w-[445px] h-[300px] absolute border bg-green/10 border-green/20 backdrop-blur-md rounded-xl p-2 transition-all group-hover:rotate-3 max-lg:w-[95%] max-lg:h-auto max-md:max-w-[500px] max-sm:p-1">
                <img src={frontImage.src} alt=`Sito sviluppato per ${title}, versione desktop` class="w-full h-full object-cover rounded-lg" />
            </div>
            <div class="z-40 w-[100px] h-[200px] bg-green/10 p-1 rounded-md ml-[300px] mt-[150px] transition-all  backdrop-blur-md group-hover:-rotate-2 border border-green/20 max-lg:mt-[125px] max-lg:min-w-[100px] max-lg:ml-0">
                <img src={mobileImage.src} alt=`Sito sviluppato per ${title}, versione mobile` class="w-full h-full object-cover rounded-sm" />
            </div>
        </div>
    </div>
    <div class="px-4 pb-4 text-green flex justify-between items-center">
        <span class="text-xs uppercase">{href}</span>
        <div class="flex items-center gap-2">
            <svg data-testid="geist-icon" height="16" stroke-linejoin="round" viewBox="0 0 16 16" width="16" style="color: currentcolor;"><path fill-rule="evenodd" clip-rule="evenodd" d="M8.46968 1.46968C10.1433 -0.203925 12.8567 -0.203923 14.5303 1.46968C16.2039 3.14329 16.2039 5.85674 14.5303 7.53034L12.0303 10.0303L10.9697 8.96968L13.4697 6.46968C14.5575 5.38186 14.5575 3.61816 13.4697 2.53034C12.3819 1.44252 10.6182 1.44252 9.53034 2.53034L7.03034 5.03034L5.96968 3.96968L8.46968 1.46968ZM11.5303 5.53034L5.53034 11.5303L4.46968 10.4697L10.4697 4.46968L11.5303 5.53034ZM1.46968 14.5303C3.14329 16.2039 5.85673 16.204 7.53034 14.5303L10.0303 12.0303L8.96968 10.9697L6.46968 13.4697C5.38186 14.5575 3.61816 14.5575 2.53034 13.4697C1.44252 12.3819 1.44252 10.6182 2.53034 9.53034L5.03034 7.03034L3.96968 5.96968L1.46968 8.46968C-0.203923 10.1433 -0.203925 12.8567 1.46968 14.5303Z" fill="currentColor"></path></svg>
