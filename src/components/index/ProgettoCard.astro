---
import { getImage } from "astro:assets";

const { title, description, href, imageBack, imageFront, imageMobile, tags, colors, classCard } = Astro.props;

const backImage = await getImage({ src: imageBack, format: 'webp', height: 800, quality: 100 })
const frontImage = await getImage({ src: imageFront, format: 'webp', width: 800, height: 600, quality: 100 })
const mobileImage = await getImage({ src: imageMobile, format: 'webp', width: 150, quality: 100 })
---

